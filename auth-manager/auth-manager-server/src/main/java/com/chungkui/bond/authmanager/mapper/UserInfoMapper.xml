<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chungkui.bond.authmanager.mapper.UserInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chungkui.bond.authmanager.bean.UserInfo">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="introduction" property="introduction" />
        <result column="avatar" property="avatar" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, username, password, introduction, avatar
    </sql>

    <select id="findByLoginName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select id, name, username, password, introduction, avatar from supms_user_info where username=#{loginName}

    </select>
    <select id="checkLoginNameUnique" parameterType="com.chungkui.bond.authmanager.bean.UserInfo" resultType="int">
		select count(1) from supms_user_info where username=#{loginName}
		<if test="id!=null and id!=''">
            and id !=#{id}
        </if>


	</select>
</mapper>
